---
import '@fontsource-variable/inter'

import { ViewTransitions } from 'astro:transitions'
import { type Props as SEOProps, SEO } from 'astro-seo'

import Footer from '@/components/Footer.astro'
import Header from '@/components/Header.astro'
import { SITE } from '@/data/config'

import '@/globals.css'

interface Props {
	seo?: SEOProps
}

const { seo } = Astro.props
---

<script data-astro-rerun src="/theme.js"></script>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			titleTemplate={`%s | ${SITE.title}`}
			title={seo?.title || SITE.title}
			description={seo?.description || SITE.description}
			openGraph={{
				basic: {
					title: seo?.title || SITE.title,
					type: 'website', // https://ogp.me/#types
					image: SITE.image || '/open-graph.jpg',
				},
			}}
			{...seo}
		/>
		<ViewTransitions />
		<script>
			document.documentElement.classList.add('js')
		</script>
	</head>
	<body class="min-h-screen bg-background font-sans antialiased">
		<div class="relative flex min-h-screen flex-col">
			<Header />
			<main class="flex-auto">
				<slot />
			</main>
			<Footer />
		</div>
		<style is:global>
			@keyframes translate-down {
				to {
					transform: translateY(0);
				}
			}

			.timeline {
				/* This timeline would be overriden */
				animation-timeline: scroll(y);
			}

			.animate-translate-down {
				animation: translate-down 3s cubic-bezier(0.65, 0.05, 0.17, 0.99) forwards;
			}

			.timeline {
				/* This is the correct order */
				animation-timeline: scroll(y);
			}
		</style>
		<script>
			import 'taos'
		</script>
	</body>
</html>
