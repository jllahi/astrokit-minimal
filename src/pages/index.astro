---
// import Hero from '@/components/Hero.astro'
import Section from '@/components/Section.astro'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
---

<Layout seo={{ title: 'Welcome to Astro ShadCN' }}>
	<Section>
		<div class="flex max-w-[980px] flex-col items-start gap-2">
			<h1 class="text-3xl font-extrabold leading-tight tracking-tighter md:text-4xl">
				Astro Shadcn UI Template <br class="hidden sm:inline" />
				built with Radix UI and Tailwind CSS.
			</h1>
			<p class="max-w-[700px] text-lg text-muted-foreground">
				Accessible and customizable components that you can copy and paste into your apps. Free.
				Open Source.
			</p>
		</div>
		<div class="flex gap-4">
			<a href="https://ui.shadcn.com" target="_blank" rel="noreferrer" class={buttonVariants()}>
				Documentation
			</a>
			<a
				href="https://github.com/AREA44/astro-shadcn-ui-template"
				target="_blank"
				rel="noreferrer"
				class={buttonVariants({ variant: 'outline' })}
			>
				GitHub
			</a>
		</div>
	</Section>
	<!-- <Section>
    <Hero intent={'background'} />
  </Section> -->
</Layout>
