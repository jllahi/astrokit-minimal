---
import { Icon } from 'astro-icon/components'

interface Props {
	date: Date
}

const { date } = Astro.props
---

<time
	datetime={date.toISOString()}
	class="font-heading flex flex-row place-items-center gap-3 text-xl text-muted-foreground"
>
	<Icon name="ri:calendar-2-line" title="Date" />
	<small>
		{
			date.toLocaleDateString('es-es', {
				year: 'numeric',
				month: 'numeric',
				day: 'numeric',
			})
		}
	</small>
</time>
