import TailwindIndicator from './theme/TailwindIndicator.astro'
---

<footer class="border-t py-6 md:px-8 md:py-0">
  <div class="container flex flex-col items-center justify-between gap-4 md:h-24 md:flex-row">
    <p class="text-muted-foreground text-center text-sm leading-loose md:text-left">
      Built with{' '}
      <a
        href="https://astro.build/"
        target="_blank"
        rel="noreferrer"
        class="font-medium underline underline-offset-4"
      >
        {Astro.generator}
      </a>
      . The source code is available on{' '}
      <a
        href="https://github.com/AREA44/astro-shadcn-ui-template"
        target="_blank"
        rel="noreferrer"
        class="font-medium underline underline-offset-4"
      >
        GitHub
      </a>
      .
    </p>
  </div>
  <TailwindIndicator align="right" />
</footer>
