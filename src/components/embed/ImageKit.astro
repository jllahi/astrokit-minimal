const { src, alt, loading = 'lazy', ...attrs } = Astro.props
---

<Picture
	{alt}
	{src}
	class="my-4 aspect-video w-full rounded bg-muted object-cover"
	transition:name={`image-${src}`}
	{loading}
	formats={['webp']}
	widths={[540, 780, 1020]}
	quality={88}
	{...attrs}
/>

